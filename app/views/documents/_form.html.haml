= form_for(@document, html: { multipart: true }) do |f|
  - if @document.errors.any?
    #error_explanation
      %h2
        = pluralize(@document.errors.count, "error")
        prohibited this document from being saved:
      %ul
        - @document.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :path
    %br/
    = f.text_field :path
  .field
    = f.label :image
    %br/
    = f.text_field :image
  .field
    = f.label :file
    %br
    = f.file_field :file
  .field
    = f.label :folder_id
    %br/
    = f.select :folder_id, @folders.collect { |f| [f.name, f.id] }
  .actions
    = f.submit
