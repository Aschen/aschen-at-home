= form_for @season do |f|

  - if @season.errors.any?
    %h2= "#{pluralize(@season.errors.count, "error")} prohibited this season from being saved:"
    %ul
      - @season.errors.full_messages.each do |msg|
        %li= msg

  .field.form-group
    = f.label :number
    = f.number_field :number, class: 'form-control'
  .field.form-group
    = f.label :episodes_count
    = f.number_field :episodes_count, class: 'form-control'
  .field.form-group
    = f.label :auto_download
    = f.check_box :auto_download, {class: 'form-control'}
    = f.hidden_field :series_id
  .actions
    = f.submit class: 'btn btn-default'
